<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="10dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:orientation="horizontal"
        android:padding="12dp">


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/iamge"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/empresaview" />

        <TextView
            android:id="@+id/text_lugar_estacionamiento"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="estacionamiento"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_lugar222"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="hora ingreso:"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/text_horaingre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="hora ingreso"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/text_luga121212r"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="hora salida:"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/text_horasa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="hora salida"
                android:textSize="12sp" />

        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>
